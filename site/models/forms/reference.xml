<?xml version="1.0" encoding="utf-8"?>
<form enctype="multipart/form-data">
	<fieldset name="reference">
		<field
			name="referee_name"
			type="text"
			label="COM_DDC_REFEREE_NAME"
			description="COM_DDC_REFEREE_NAME_DESC"
			class="span12"
		/>
		<field
			name="position"
			type="text"
			label="COM_DDC_POSITION"
			description="COM_DDC_POSITION_DESC"
			class="span12"
		/>
		<field
			name="organisation"
			type="text"
			label="COM_DDC_ORGANISATION"
			description="COM_DDC_ORGANISATION_DESC"
			class="span12"
		/>
		<field
			name="address"
			type="textarea"
			label="COM_DDC_ADDRESS"
			description="COM_DDC_ADDRESS_DESC"
			rows="5"
			columns="10"
		/>
		<field
			name="contact_number"
			type="text"
			label="COM_DDC_CONTACT_NUMBER"
			description="COM_DDC_CONTACT_NUMBER_DESC"
			class="span12"
		/>
		<field
			name="contact_email"
			type="text" 
			label="COM_DDC_CONTACT_EMAIL"
			description="COM_DDC_CONTACT_EMAIL_DESC"
			class="span12"
		/>
		<field
			name="relationship"
			type="text" 
			label="COM_DDC_RELATIONSHIP"
			description="COM_DDC_RELATIONSHIP_DESC"
			class="span12"
		/>
		<field
			name="timeframe"
			type="text"
			label="COM_DDC_TIMEFRAME"
			description="COM_DDC_TIMEFRAME_DESC"
			class="span12"
		/>
		<field
			name="notes"
			type="textarea"
			label="COM_DDC_NOTES"
			description="COM_DDC_NOTES_DESC"
			placeholder="COM_DDC_NOTES_DESC"
			class="span12"
			rows="7"
			columns="15"
		/>
		<field
			name="contact_early"
			type="list"
			label="COM_DDC_CONTACT_EARLY"
			description="COM_DDC_CONTACT_EARLY_DESC"
			default="">
			<option value="">COM_DDC_PLEASE_SELECT</option>
			<option value="1">COM_DDC_YES</option>
			<option value="0">COM_DDC_NO</option>
		</field>
		<field
			name="ddc_reference_id"
			type="text"
			label="COM_DDC_REFERENCE_ID"
			description="COM_DDC_REFERENCE_ID_DESC"
			class="hidden"
			hidden="true"
		/>
		<field
			name="table"
			type="text"
			label="COM_DDC_TABLE_LABEL"
			description="COM_DDC_TABLE_DESC"
			hidden="true"
			class="hidden"
			default="references"
		/>
	</fieldset>
	<fieldset name="aboutme">
		<field
			name="aboutme"
			type="textarea"
			label="COM_DDC_ABOUT_ME_LABEL"
			description="COM_DDC_ABOUT_ME_DESC"
			cols="20"
			rows="5"
			class="span12"
			filter="safehtml"
		/>
		<field
			name="table"
			type="text"
			label="COM_DDC_TABLE_LABEL"
			description="COM_DDC_TABLE_DESC"
			hidden="true"
			class="hidden"
			default="aboutme"
		/>
	</fieldset>
</form>
